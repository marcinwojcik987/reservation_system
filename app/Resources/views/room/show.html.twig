{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pokoje</h1>

    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Photo</th>
            <td><img src="{{ asset('img/' ~ room.photo) }}" class="img-rounded" width="304" height="236"></td>
        </tr>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>

            <tr>
                <th>Price</th>
                <td>{{ room.price }} $</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.description }}</td>
            </tr>
            <tr>
                <th>Breakfast</th>
                <td>{{ room.breakfast }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ room.availability }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('room_index') }}">Back to the list</a>
        </li>{% if is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('room_edit', { 'id': room.id }) }}">Edit</a>
        </li>
        {% endif%}
        <li>
            <a href="{{ path('reservation_new', {'id': room.id}) }}">Reservation</a>
        </li>
    </ul>
{% endblock %}
